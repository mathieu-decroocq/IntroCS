<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Cesi.IntroCS.WpfApp">
    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Red"></Setter>
    </Style>
    <ControlTemplate x:Key="Tpl" TargetType="{x:Type Button}">
        <Border BorderBrush="DarkGray" BorderThickness="5" 
                CornerRadius="10,0,10,0" Background="LightGray">
            <ContentPresenter Content="{Binding Path=Content, RelativeSource={RelativeSource TemplatedParent}}">
                
            </ContentPresenter>
        </Border>
    </ControlTemplate>
    
    
    <ControlTemplate x:Key="TemplateFrame" TargetType="{x:Type Frame}">
        <Grid>
            <ContentPresenter />
        </Grid>
    </ControlTemplate>
</ResourceDictionary>